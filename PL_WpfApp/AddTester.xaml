        xmlns:BE="clr-namespace:BE;assembly=BE"
        xmlns:system="clr-namespace:System;assembly=mscorlib" x:Class="PL_WpfApp.AddTester"
        mc:Ignorable="d"
        Title="AddTester" Height="525" Width="866">
